{
    "id": "fit",
    "description": "FIT template",
    "properties": {
        "footer": {
            "description": "Footer text",
            "default": ""
        }
    },
    "slideClasses": [ "normal", "title", "section" ],
    "addSlideClasses": [ "centered", "fullspace" ],
    "defaultClass": "normal",
    "baseTheme": "sky",
    "styles": [ "fit.css", "googlecode.css" ],
    "reveal": {
        "width": 1920,
        "height": 1080,
        "margin": 0,
        "hash": true,
        "center": false,
        "pdfMaxPagesPerSlide": 1,
        "pdfSeparateFragments": false,
        "layout": {
            "footer": {
                "numbering": true,
                "label": "${footer}"
            }
        },
        "rewrite": {
            "rules": [
                {
                    "pattern": " -- ",
                    "result": " &ndash; ",
                    "flags": "g"
                },
                {
                    "pattern": "\\.\\.\\.",
                    "result": "&hellip;",
                    "flags": "g"
                },
                {
                    "pattern": "``",
                    "result": "&bdquo;",
                    "flags": "g"
                },
                {
                    "pattern": "''",
                    "result": "&ldquo;",
                    "flags": "g"
                },
                {
                    "pattern": "@@([^@]+)@@",
                    "result": "<$1>",
                    "flags": "g"
                },
                {
                    "pattern": ">\\?\\?",
                    "result": " class=\"fragment\">",
                    "flags": "g"
                },
                {
                    "pattern": "\\|\\|([^\\|]+)\\|\\|",
                    "result": "<span class=\"fragment\">$1</span>",
                    "flags": "g"
                }
            ]
        }
    }
}
